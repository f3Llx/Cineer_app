<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:backgroundTint="#853F3D82"
    android:backgroundTintMode="src_over">

    <TextView
        android:id="@+id/nombre_peli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="45dp"
        android:minHeight="45dp"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_img_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="45dp"
        android:maxHeight="45dp"
        android:minWidth="45dp"
        android:minHeight="45dp"
        app:layout_constraintEnd_toEndOf="@+id/nombre_peli"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/get_drawable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nombre_peli"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_drop_up_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>